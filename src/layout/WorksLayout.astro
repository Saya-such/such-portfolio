---
import { SEO } from "astro-seo";
import basePath from "@/libs/basePath";
import "@/styles/global.css";
import Header from "@/components/Header/index.astro";
import Main from "@/components/Main.astro";

interface Props {
  title: string;
  description: string;
  image?: string;
}

const {
  title,
  description,
  image = "/images/portfolio-thumb.webp",
} = Astro.props as Props;

const PROD_SITE = new URL("https://such-web.com/");
const base = import.meta.env.BASE_URL.replace(/\/$/, "");
let path = Astro.url.pathname;
if (base && path.startsWith(base)) path = path.slice(base.length) || "/";
if (!path.endsWith("/")) path += "/";
const canonical = new URL(path, PROD_SITE).href;

const imagePath = basePath(image);
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <!-- fonts -->
    <link rel="preconnect" href="https://use.typekit.net" crossorigin />
    <script>
      (function (d) {
        var config = {
            kitId: "ivw1jas",
            scriptTimeout: 3000,
            async: true,
          },
          h = d.documentElement,
          t = setTimeout(function () {
            h.className =
              h.className.replace(/\bwf-loading\b/g, "") + " wf-inactive";
          }, config.scriptTimeout),
          tk = d.createElement("script"),
          f = false,
          s = d.getElementsByTagName("script")[0],
          a;
        h.className += " wf-loading";
        tk.src = "https://use.typekit.net/" + config.kitId + ".js";
        tk.async = true;
        tk.onload = tk.onreadystatechange = function () {
          a = this.readyState;
          if (f || (a && a != "complete" && a != "loaded")) return;
          f = true;
          clearTimeout(t);
          try {
            Typekit.load(config);
          } catch (e) {}
        };
        s.parentNode.insertBefore(tk, s);
      })(document);
    </script>
    <link rel="icon" href={basePath("/images/favicon.ico")} sizes="32x32" />
    <link rel="icon" href={basePath("/images/icon.svg")} type="image/svg+xml" />
    <link rel="apple-touch-icon" href={basePath("/images/icon.png")} />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href={basePath("/sitemap-index.xml")} />
    <SEO
      title={title}
      description={description}
      canonical={canonical}
      openGraph={{
        basic: {
          title,
          type: "article",
          image: imagePath,
        },
      }}
      twitter={{
        creator: "@Chaya0815",
      }}
    />
    <!-- Google Tag Manager -->
    <script>
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != "dataLayer" ? "&l=" + l : "";
        j.async = true;
        j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, "script", "dataLayer", "GTM-W2BNXSRC");
    </script>
    <!-- End Google Tag Manager -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@graph": [
          {
            "@type": "WebSite",
            "@id": "https://such-web.com/#website",
            "name": "such | Frontend Development",
            "description": "suchは、フロントエンド実装を軸に、デザイン意図を大切にしたWeb制作を行っています。アニメーションやアクセシビリティにも配慮した実装事例をポートフォリオとして掲載しています。",
            "creator": {
              "@type": "Person",
              "name": "Saya Saito"
            },
            "dateCreated": "2026-02-09",
            "url": "https://such-web.com/"
          },
          {
            "@type": "Organization",
            "@id": "https://such-web.com/#organization",
            "name": "such",
            "url": "https://such-web.com/"
          }
        ]
      }
    </script>
  </head>
  <body
    class="font-primary h-screen w-screen overflow-x-hidden text-sm leading-loose tracking-widest lg:text-base 2xl:text-lg"
  >
    <!-- Google Tag Manager (noscript) -->
    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-W2BNXSRC"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe></noscript
    >
    <!-- End Google Tag Manager (noscript) -->
    <div id="page-wrapper" class="duration-300">
      <Header />

      <Main>
        <slot />
      </Main>
    </div>
    <div
      id="page-bg"
      class="page-bg fixed top-0 left-0 -z-100 h-screen w-screen"
    >
      <img
        src={basePath("/images/bg-sp.webp")}
        alt=""
        class="h-full w-full object-cover md:hidden"
      />
      <img
        src={basePath("/images/bg.webp")}
        alt=""
        class="hidden h-full w-full object-cover md:block"
      />
    </div>

    <script>
      import enableSmoothScroll from "@/libs/enableSmoothScroll";
      import initButtonAnimation from "@/libs/animations/initButtonAnimation";
      import setHeaderColor from "@/libs/animations/setHeaderColor";
      import reload from "@/libs/reload";

      enableSmoothScroll();
      initButtonAnimation();
      reload();
      setHeaderColor("main");
    </script>
  </body>
</html>
