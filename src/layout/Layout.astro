---
import { SEO } from "astro-seo";
import basePath from "@/libs/basePath";
import "@/styles/global.css";
import Header from "@/components/Header/index.astro";
import Main from "@/components/Main.astro";

interface Props {
  title: string;
  description: string;
  ogpType?: "website" | "article";
}

const { title, description, ogpType = "article" } = Astro.props as Props;

const base = import.meta.env.BASE_URL;
const path = Astro.url.pathname.startsWith(base)
  ? Astro.url.pathname.slice(base.length - 1)
  : Astro.url.pathname;

const canonical = new URL(path, Astro.site).href;

const ogpImagePath = basePath("/images/portfolio-thumb.webp");
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" href={basePath("/images/favicon.ico")} sizes="32x32" />
    <link rel="icon" href={basePath("/images/icon.svg")} type="image/svg+xml" />
    <link rel="apple-touch-icon" href={basePath("/images/icon.png")} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href={basePath("/sitemap-index.xml")} />
    <SEO
      title={title}
      description={description}
      canonical={canonical}
      openGraph={{
        basic: {
          title,
          type: ogpType,
          image: ogpImagePath,
        },
      }}
      twitter={{
        creator: "@Chaya0815",
      }}
    />
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@graph": [
          {
            "@type": "WebSite",
            "@id": "https://such-web.com/#website",
            "name": "such | Frontend Development",
            "description": "suchは、フロントエンド実装を軸に、デザイン意図を大切にしたWeb制作を行っています。アニメーションやアクセシビリティにも配慮した実装事例をポートフォリオとして掲載しています。",
            "creator": {
              "@type": "Person",
              "name": "Saya Saito"
            },
            "dateCreated": "2026-02-09",
            "url": "https://such-web.com/"
          },
          {
            "@type": "Organization",
            "@id": "https://such-web.com/#organization",
            "name": "such",
            "url": "https://such-web.com/"
          }
        ]
      }
    </script>
    <!-- fonts -->
    <script>
      (function (d) {
        var config = {
            kitId: "ivw1jas",
            scriptTimeout: 3000,
            async: true,
          },
          h = d.documentElement,
          t = setTimeout(function () {
            h.className =
              h.className.replace(/\bwf-loading\b/g, "") + " wf-inactive";
          }, config.scriptTimeout),
          tk = d.createElement("script"),
          f = false,
          s = d.getElementsByTagName("script")[0],
          a;
        h.className += " wf-loading";
        tk.src = "https://use.typekit.net/" + config.kitId + ".js";
        tk.async = true;
        tk.onload = tk.onreadystatechange = function () {
          a = this.readyState;
          if (f || (a && a != "complete" && a != "loaded")) return;
          f = true;
          clearTimeout(t);
          try {
            Typekit.load(config);
          } catch (e) {}
        };
        s.parentNode.insertBefore(tk, s);
      })(document);
    </script>
  </head>
  <body
    class="font-primary h-screen w-screen overflow-x-hidden text-sm leading-loose tracking-widest lg:text-base 2xl:text-lg"
  >
    <div id="page-wrapper" class="duration-300">
      <Header />

      <Main>
        <slot />
      </Main>
    </div>
    <div
      id="page-bg"
      class="page-bg fixed top-0 left-0 -z-100 h-screen w-screen"
    >
      <img
        src={basePath("/images/bg.webp")}
        alt=""
        class="h-full w-full object-cover"
      />
    </div>

    <script>
      import enableSmoothScroll from "@/libs/enableSmoothScroll";
      import initButtonAnimation from "@/libs/animations/initButtonAnimation";
      import reload from "@/libs/reload";

      enableSmoothScroll();
      initButtonAnimation();
      reload();
    </script>
  </body>
</html>
