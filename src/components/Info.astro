---
import cn from "@/libs/cn";

interface Props {
  other?: string;
}

const { other } = Astro.props as Props;

const style = cn("info border-t-1 border-[#524159]", other);
---

<div class={style}>
  <div class="flex items-end pt-5 pb-3 lg:pt-8">
    <img
      src="/images/logo-wh.png"
      alt="suchのロゴ"
      class="h-auto w-18 -translate-x-1.5 object-contain lg:w-20"
    />
    <div class="info-content">
      <p
        class="font-en pb-1 pl-2 leading-normal tracking-wider lg:pb-0.5 lg:pl-4 lg:text-lg lg:leading-relaxed"
      >
        In Sapporo, Hokkaido<br />9:00 - 17:30<span
          class="inline-block pl-3 text-xs lg:pl-4 lg:text-sm"
          >※土日祝 お休み</span
        >
      </p>
    </div>
  </div>
</div>
