---
import menuItemData from "@/data/menuItemData";
import Button from "@/components/Button.astro";
import DiamondShape from "@/components/DiamondShape.astro";
import HeaderMenuButton from "./HeaderMenuButton.astro";
---

<div id="menu">
  <button
    id="menu-btn"
    class="menu-btn mr-2.5 inline-grid cursor-pointer grid-cols-1 grid-rows-1 py-1 align-top"
  >
    <HeaderMenuButton />
    <HeaderMenuButton text="CLOSE" other="invisible" />
  </button>
  <nav
    class="menu-nav bg-main visible fixed top-0 left-0 -z-1 grid h-screen w-screen grid-rows-9"
  >
    <ul class="menu-list row-start-3 grid h-[85vh] grid-rows-7 px-12">
      {
        menuItemData
          .filter((item) => !(item.text === "Contact"))
          .map((item) => (
            <li class="menu-item">
              <a
                href={item.link}
                class="font-en relative p-6 text-3xl text-white underline"
              >
                {item.text}
                <DiamondShape other="absolute inset-y-0 left-0" />
              </a>
            </li>
          ))
      }
      {
        menuItemData
          .filter((item) => item.text === "Contact")
          .map((item) => (
            <li class="menu-item _contact row-start-5 self-center">
              <Button
                text={item.text}
                link={item.link}
                lg={true}
                subColor={true}
              />
            </li>
          ))
      }
    </ul>
  </nav>
</div>
